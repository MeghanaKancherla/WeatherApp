<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="40dp"
    app:cardElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0B3E5FC">

        <TextView
            android:id="@+id/timeT"
            android:layout_width="180dp"
            android:layout_height="43dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Time : "
            android:textColor="#B71C1C"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/hourlyIcon"
            android:layout_width="70dp"
            android:layout_height="55dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toEndOf="@+id/timeT"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/currTempT"
            android:layout_width="149dp"
            android:layout_height="28dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:text="Temperature : "
            android:textColor="#004D40"
            android:textSize="14sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/timeT" />

        <TextView
            android:id="@+id/pressureT"
            android:layout_width="120dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Pressure : "
            android:textColor="#004D40"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/currTempT"
            app:layout_constraintTop_toBottomOf="@+id/hourlyIcon" />

        <TextView
            android:id="@+id/humidT"
            android:layout_width="126dp"
            android:layout_height="28dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:text="Humidity : "
            android:textColor="#004D40"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/currTempT" />

        <TextView
            android:id="@+id/dueT"
            android:layout_width="118dp"
            android:layout_height="30dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:text="Due Point : "
            android:textColor="#004D40"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/humidT"
            app:layout_constraintTop_toBottomOf="@+id/pressureT" />

        <TextView
            android:id="@+id/cloudsT"
            android:layout_width="96dp"
            android:layout_height="28dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="10dp"
            android:text="Clouds : "
            android:textColor="#004D40"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/windT"
            app:layout_constraintTop_toBottomOf="@+id/dueT" />

        <TextView
            android:id="@+id/windT"
            android:layout_width="119dp"
            android:layout_height="28dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:text="Wind Speed : "
            android:textColor="#004D40"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/humidT" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>